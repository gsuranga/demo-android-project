<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="4000" >

    <TextView
        android:id="@+id/textmsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1000"
        android:text="4154"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edittxt_voucher_no"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1000"
        android:hint="enter voucher no"
         />

    <EditText
        android:id="@+id/edittxt_amount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1000"
        android:hint="enter voucher amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edittxt_voucher_remark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1000"
        android:hint="enter remark"
       />

    
    <Button
        android:id="@+id/btn_photo_capture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1000"
        android:background="@drawable/greenbutton"
        android:text="Capture photo" />
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1000"
        android:background="@drawable/greenbutton" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1000"
        android:background="@drawable/greenbutton" />

</LinearLayout>