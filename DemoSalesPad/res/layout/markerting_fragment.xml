<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

        <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/textView1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Campaign type:"
                            android:textSize="23sp"/>

                    <Spinner
                            android:id="@+id/markerting_items"
                            android:layout_width="0dip"
                            android:layout_weight="4"/>

                    <EditText
                            android:id="@+id/other"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:ems="10"
                            android:hint="Other">

                        <requestFocus/>
                    </EditText>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="clip_vertical">

                    <LinearLayout
                            android:id="@+id/linearMain2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/add_button"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="+"/>

                        <ceylon.linux.view.CustomAutoCompleteTextView2
                                android:id="@+id/a_no"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:ems="10"
                                android:hint="Account No"
                               >

                            <requestFocus/>
                        </ceylon.linux.view.CustomAutoCompleteTextView2>

                        <EditText
                                android:id="@+id/name"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.6"
                                android:ems="18"
                                android:hint="Name">

                            <requestFocus/>
                        </EditText>

                        <EditText
                                android:id="@+id/c_to"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:ems="10"
                                android:hint="Current T/O">

                            <requestFocus/>
                        </EditText>

                        <EditText
                                android:id="@+id/ince"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:ems="18"
                                android:hint="Expected increase after three months">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/date_chooser"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Select Date">

                        <requestFocus/>
                    </EditText>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain899"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/objective"
                                android:gravity="left|top"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="18"
                                android:hint="Objective">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain89"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/minimalrequired"
                                android:layout_width="0dip"
                                android:gravity="left|top"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:ems="18"
                                android:hint="Material Required from H/O">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain89"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/other_required"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:ems="18"
                                android:gravity="left|top"
                                android:hint="Other requirements from branch">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain89"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal">

                        <EditText
                                android:id="@+id/location"
                                android:layout_width="0dip"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:ems="18"
                                android:hint="Location">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/wrapper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:id="@+id/inner1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Expected Number Of Participants:"
                                    android:textSize="23sp"/>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/inner2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:orientation="vertical">

                            <EditText
                                    android:id="@+id/invitees"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="18"
                                    android:hint="Invitees">

                                <requestFocus/>
                            </EditText>

                            <EditText
                                    android:id="@+id/dimo_employees"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="18"
                                    android:hint="Dimo Employees">

                                <requestFocus/>
                            </EditText>

                            <EditText
                                    android:id="@+id/total_employees"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ems="18"
                                    android:hint="Total Employees">

                                <requestFocus/>
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"/>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/add_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"/>

                        <EditText
                                android:id="@+id/description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Description">

                            <requestFocus/>
                        </EditText>

                        <EditText
                                android:id="@+id/ecpu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Estimated Cost per Unit">

                            <requestFocus/>
                        </EditText>

                        <EditText
                                android:id="@+id/qty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:hint="Quantity">

                            <requestFocus/>
                        </EditText>

                        <EditText
                                android:id="@+id/total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="18"
                                android:hint="total"
                                android:text="0">

                            <requestFocus/>
                        </EditText>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain666"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/budgtlabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Budget (Rs.)"
                                android:textSize="23sp"/>

                        <TextView
                                android:id="@+id/budget"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="0.00:"
                                android:textSize="23sp"/>
                    </LinearLayout>
                </TableRow>

                <TableRow
                        android:id="@+id/tableRow10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/linearMain6667"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/quotations"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Upload Quotations"/>

                        <Button
                                android:id="@+id/save"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</LinearLayout>