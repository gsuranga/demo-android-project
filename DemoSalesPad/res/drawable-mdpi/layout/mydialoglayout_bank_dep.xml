<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:orientation="vertical"
    android:padding="5dp" >
    <TextView
        android:id="@+id/textmsg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="4154"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spin_bank"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <EditText
        android:id="@+id/edittxt_account_no"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:hint="enter account no"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Deposit Date"
        android:textSize="18sp" />

    <DatePicker
        android:id="@+id/date_date_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="5"
        android:calendarViewShown="false"
        android:hint="enter cheque amount"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/edittxt_amount"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:hint="enter amount"
        android:inputType="numberDecimal" />
    
     <Button
        android:id="@+id/btn_cap_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:text="Capture Deposit Slip  Photo"
        android:background="@drawable/greenbutton" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:background="@drawable/greenbutton" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1.5"
        android:background="@drawable/greenbutton" />
</LinearLayout>
</ScrollView>