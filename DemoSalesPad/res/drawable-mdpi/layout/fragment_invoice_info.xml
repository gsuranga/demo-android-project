<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <ToggleButton
            android:id="@+id/s_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="[Show] Suggested Items"
            android:textOn="[Hide]Suggested Items" />

        <ToggleButton
            android:id="@+id/fastMoving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="[Show] Fast Moving Items"
            android:textOn="[Hide]Fast Moving Items" />

        <ToggleButton
            android:id="@+id/notAchieved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="[Show] Not Achieved Targets"
            android:textOn="[Hide] Not Achieved Targets" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/suggestionLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suggestion Orders"
                android:textSize="23sp"
                android:textStyle="bold"
                 />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >

                <LinearLayout
                    android:id="@+id/suggestion_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/header"
                        android:layout_width="2750dp"
                        android:layout_height="57dp"
                        android:background="#888888"
                        android:weightSum="26" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Part \nNo" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:text="Description" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="63dp"
                            android:layout_weight="1.2"
                            android:lines="4"
                            android:padding="5dp"
                            android:text="Available\nStock at\nthe Dealer" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="5dp"
                            android:text="Avg\nMonthly\nSale" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:text="Total\nSales for\nlast 30 days" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Stock\nLost\nSales" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Value\nLost\nSales" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Avg\nDaily\nDemand" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="Days\nBetween\nOrders" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:text="Suggested\nQuantity" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:padding="5dp"
                            android:text="Available\nStockat\nVSD" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:padding="5dp"
                            android:text="UnSupplied Order\nQty\nfor 30 days" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:text="Movement\nin area\nper month" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:text="Days\nSince\nLast Invoice Date" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="5dp"
                            android:text="Days\nSince\nLastPO Date" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.6"
                            android:padding="5dp"
                            android:text="Average\nMonthly\nRequirement" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp"
                            android:text="No of Items Invoice for past\n01 month" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.0"
                            android:padding="5dp"
                            android:text="Description" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="5dp"
                            android:text="part-no" />
                        
                         <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:padding="5dp"
                            android:text="Vehicale Model" />
                        
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:id="@+id/suggestedOrdersList"
                            android:layout_width="2750dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fastMovingItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fast Moving Items"
                android:textSize="23sp"
                android:textStyle="bold"
                 />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/show_fast_moving_items_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#888888"
                        android:orientation="horizontal"
                        android:weightSum="400" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Part no"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Description"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Quantity"
                            android:textStyle="bold|italic" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <LinearLayout
                            android:id="@+id/part_number_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:tag="f" >
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notAchievedLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Achieved Targets"
                android:textStyle="bold"
                android:textSize="23sp"
                
                 />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/layout_not_achived"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#888888"
                        android:orientation="horizontal"
                        android:weightSum="600" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Part no"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Description"
                            android:textStyle="bold|italic" />

                        

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Quantity"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Additional Quantity"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:gravity="center"
                            android:text="Actual Quantity"
                            android:textStyle="bold|italic" />
                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="300" >

                        <LinearLayout
                            android:id="@+id/show_not_achived_targets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:tag="na" >
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6" >

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:text="Items" />

        <Button
            android:id="@+id/move_to_purchase_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Move to Purchase Order" />
    </LinearLayout>

</LinearLayout>